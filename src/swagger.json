{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Snake Online"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Local"
    },
    {
      "url": "https://snake-online-dev.herokuapp.com",
      "description": "Dev"
    }
  ],
  "paths": {
    "/api/register": {
      "post": {
        "summary": "Registro de usuários",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "nickname": "Oosasukel",
                  "email": "email@example.com",
                  "password": "123"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "examples": {
                  "ErrorResponseOne": {
                    "value": {
                      "message": "Something wrong with the request."
                    }
                  },
                  "ErrorResponseTwo": {
                    "value": {
                      "message": "A user already exists with this email."
                    }
                  },
                  "ErrorResponseTree": {
                    "value": {
                      "message": "A user already exists with this nickname."
                    }
                  }
                }
              }
            }
          },
          "201": {
            "description": "CREATED",
            "content": {
              "application/json": {
                "examples": {
                  "SuccessResponseOne": {
                    "value": {
                      "message": "User successfully created.",
                      "user": [
                        {
                          "id": "uuid random",
                          "nickname": "xxXmorriXxx",
                          "email": "mailxample@hello.com"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/request-new-password": {
      "post": {
        "summary": "Esqueci minha senha",
        "description": "Envia um email para o usuário poder alterar sua senha.",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "email": "email@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "Invalid email."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "User not found."
                    }
                  }
                }
              }
            }
          },
          "201": {
            "description": "CREATED",
            "content": {
              "application/json": {
                "examples": {
                  "Success Response": {
                    "value": {
                      "message": "Password recovery email sent to email@example.com."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/new-password": {
      "post": {
        "summary": "Recuperar a senha",
        "description": "Alterar a senha a partir do requestId e requestSecret obtido no email de esqueci minha senha.",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "requestId": "335b53SD3-e7a0-435b-b44c-b868f126xA3eb4",
                  "requestSecret": "335b5e73-e7a0-435b-b44c-b868f1123eb4",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "requestId, requestSecret and password are required."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "Invalid requestSecret."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "User not found."
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "examples": {
                  "Success Response": {
                    "value": {
                      "message": "Password successfully updated."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/change-password": {
      "put": {
        "security": [{ "bearerAuth": [] }],
        "summary": "Atualiza a senha",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "password": "1234",
                  "new_password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "Something wrong with the request."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "Password is incorrect."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND",
            "content": {
              "application/json": {
                "examples": {
                  "Error Response": {
                    "value": {
                      "message": "User not found."
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "examples": {
                  "Success Response": {
                    "value": {
                      "message": "Password updated."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
